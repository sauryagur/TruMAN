# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should use LF line endings
*.sh text eol=lf

# Rust files
*.rs text diff=rust

# JavaScript/TypeScript files
*.js text
*.jsx text
*.ts text
*.tsx text

# Ignore binary files for diff
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Exclude specific files from Git archive
.gitattributes export-ignore
.gitignore export-ignore
